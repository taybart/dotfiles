################################################################################
####                            Keybindings                                 ####
################################################################################
# Set super
set $super Mod4
set $alt Mod1

# Use Mouse+$mod to drag floating windows
floating_modifier $super

# reload the configuration file
bindsym $super+Shift+c reload
# restart sway inplace (preserves your layout/session, can be used to upgrade sway)
bindsym $super+Shift+r restart
# restart compositor
# bindsym $super+t exec --no-startup-id pkill picom
# exit i3 (logs you out of your X session)
bindsym $super+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your X session.' -b 'Yes, exit sway' 'swaymsg exit'

# kill focused window
bindsym $super+q kill

# start program launcher
bindsym $super+Shift+d exec --no-startup-id rofi -show drun -theme ~/.config/rofi/theme -drun-show-actions
bindsym $super+Tab exec rofi -show window -theme ~/.config/rofi/theme

# launch categorized menu
# bindsym $super+z exec --no-startup-id morc_menu

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound
bindsym XF86MonBrightnessUp exec light -A 10
bindsym XF86MonBrightnessDown exec light -U 10

# 3 finger swipe for moving workspaces
bindgesture swipe:3:right workspace prev
bindgesture swipe:3:left workspace next

# start a terminal
bindsym $super+Return exec ghostty

# files
bindsym $super+shift+f exec thunar

# Screenshot
bindsym $super+Ctrl+s exec --no-startup-id grim -g "$(slurp)" - | swappy -f -
bindsym $super+Ctrl+Shift+4 exec --no-startup-id grim -g "$(slurp)" - | wl-copy
bindsym $super+Ctrl+Shift+Print exec wf-recorder -g "$(slurp)" -f ~/recording_$(date +"%Y-%m-%d_%H:%M:%S.mp4")
bindsym $super+Ctrl+Shift+BackSpace exec killall -s SIGINT wf-recorder

bindsym $super+Ctrl+p exec --no-startup-id 1password --quick-access

# bindsym $super+p exec --no-startup-id xfce4-panel -r --disable-wm-check

# Resize window (you can also use the mouse for that)
# bindsym $super+r mode "resize"
# mode "resize" {
